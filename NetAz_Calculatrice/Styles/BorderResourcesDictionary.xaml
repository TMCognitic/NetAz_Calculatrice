<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Border" x:Key="ScreenBorderStyle">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="#FFECEEDF" />
                    <GradientStop Offset=".4" Color="#FFDDE0C5" />
                    <GradientStop Offset=".7" Color="#FFDDE0C5" />
                    <GradientStop Offset="1" Color="#FFECEEDF" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>