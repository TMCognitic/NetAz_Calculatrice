<Application x:Class="NetAz_Calculatrice.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NetAz_Calculatrice"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <sys:Double x:Key="DefaultFontSize">26</sys:Double>
                    <sys:String x:Key="AppTitle">Calculatrice 1.0</sys:String>
                </ResourceDictionary>
                <ResourceDictionary Source="Styles\BorderResourcesDictionary.xaml" />
                <ResourceDictionary Source="Styles\ButtonResourcesDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
